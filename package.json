{
  "name": "coding-template",
  "author": "saku",
  "license": "MIT",
  "browserslist": [
    "last 2 versions",
    "> 1% in JP",
    "not IE 11"
  ],
  "scripts": {
    "reinstall": "rimraf node_modules && yarn cache clean && yarn install",
    "clean": "rimraf ./static ./assets",
    "lint:css": "stylelint --fix **/*.{css,scss}",
    "dev": "npm run clean && NODE_ENV=development webpack",
    "static": "npm run clean && NODE_KEY=static NODE_ENV=development webpack -w",
    "server": "rimraf ./assets && NODE_KEY=server NODE_ENV=development webpack -w",
    "build": "npm run clean && NODE_ENV=production webpack",
    "format": "npm run build && npm run lint:css"
  },
  "devDependencies": {
    "@babel/core": "^7.15.8",
    "@babel/eslint-parser": "^7.15.8",
    "@babel/preset-env": "^7.15.8",
    "autoprefixer": "^10.3.7",
    "babel-loader": "^8.2.2",
    "browser-sync": "^2.27.5",
    "browser-sync-webpack-plugin": "^2.3.0",
    "copy-webpack-plugin": "^9.0.1",
    "css-declaration-sorter": "^6.1.3",
    "css-loader": "^6.4.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-webpack-plugin": "^3.0.1",
    "fibers": "^5.0.0",
    "globule": "^1.3.3",
    "html-loader": "^2.1.2",
    "html-webpack-plugin": "^5.3.2",
    "imagemin-gifsicle": "^7.0.0",
    "imagemin-mozjpeg": "^9.0.0",
    "imagemin-pngquant": "^9.0.2",
    "imagemin-svgo": "^10.0.0",
    "imagemin-webp-webpack-plugin": "^3.3.6",
    "imagemin-webpack-plugin": "^2.4.2",
    "mini-css-extract-plugin": "^2.4.2",
    "postcss": "^8.4.4",
    "postcss-loader": "^6.2.1",
    "postcss-sass": "^0.5.0",
    "postcss-sort-media-queries": "^4.1.0",
    "prettier": "^2.5.1",
    "pug-html-loader": "^1.1.5",
    "rimraf": "^3.0.2",
    "sass": "^1.42.1",
    "sass-loader": "^12.1.0",
    "stylelint": "^14.1.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-property-sort-order-smacss": "^8.0.0",
    "stylelint-config-recommended-scss": "^5.0.2",
    "stylelint-prettier": "^2.0.0",
    "stylelint-scss": "^4.0.0",
    "stylelint-webpack-plugin": "^3.1.0",
    "webpack": "^5.57.1",
    "webpack-cli": "^4.8.0"
  },
  "dependencies": {
    "core-js": "3",
    "regenerator-runtime": "^0.13.9"
  }
}
